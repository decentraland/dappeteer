{
  "name": "dappeteer",
  "version": "2.1.0",
  "description": "E2E testing for dApps using Puppeteer + MetaMask",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "metamask",
    "dist"
  ],
  "scripts": {
    "copy-web3-for-testing": "rm -rf test/server/web3.min.js; cp node_modules/web3/dist/web3.min.js test/server/web3.min.js",
    "postinstall": "npm run copy-web3-for-testing && npx rimraf node_modules/**/**/.git",
    "build": "tsc",
    "prepare": "npm run build",
    "test": "mocha -r ts-node/register test/test.ts --timeout=200000 --exit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/decentraland/dappeteer.git"
  },
  "keywords": [
    "e2e",
    "testing",
    "metamask",
    "puppeteer",
    "dapp",
    "ethereum"
  ],
  "author": "Juan Cazala <juan@decentraland.org>",
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^8.2.0",
    "dcl-tslint-config-standard": "^2.0.0",
    "ganache-core": "^2.13.2",
    "mocha": "^8.4.0",
    "puppeteer": "^9.1.1",
    "rocketh": "0.1.10",
    "serve-handler": "~6.1.3",
    "solc": "0.8.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.5",
    "web3": "1.4.0"
  },
  "peerDependencies": {
    "puppeteer": "^9.1.1"
  }
}
