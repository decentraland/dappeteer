{
  "name": "@dasanra/dappeteer",
  "version": "2.2.0",
  "description": "E2E testing for dApps using Puppeteer + MetaMask",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "metamask",
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "copy-web3-for-testing": "rm -rf test/server/web3.min.js; cp node_modules/web3/dist/web3.min.js test/server/web3.min.js",
    "pretest": "npm run copy-web3-for-testing && npx rimraf node_modules/**/**/.git",
    "test": "hardhat compile && mocha -r ts-node/register -r hardhat/register test/test.ts --timeout=200000 --exit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dasanra/dappeteer.git"
  },
  "keywords": [
    "e2e",
    "testing",
    "metamask",
    "puppeteer",
    "dapp",
    "ethereum"
  ],
  "author": "Juan Cazala <juan@decentraland.org>",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@types/mocha": "^9.0.0",
    "dcl-tslint-config-standard": "^2.0.0",
    "ganache-core": "^2.13.2",
    "hardhat": "^2.6.4",
    "hardhat-deploy": "^0.9.1",
    "mocha": "^9.1.1",
    "puppeteer": "^9.1.1",
    "serve-handler": "~6.1.3",
    "solc": "0.8.6",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "web3": "1.5.2",
    "web3-eth": "1.5.2"
  },
  "peerDependencies": {
    "puppeteer": "^9.1.1"
  }
}
